<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="InputDigit" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black_google</item>
        <item name="android:layout_margin">@dimen/margin_input_btn</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>


    <style name="ButtonEquals" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/btn_equals</item>
        <item name="shapeAppearance">@style/EqualsButtonShape</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_margin">@dimen/margin_input_btn</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="InputChar" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/btn_equals</item>
        <item name="android:layout_margin">@dimen/margin_input_btn</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="OutlinedBoxExpressionField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="TextInputFieldExpression">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black_google</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="EqualsButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">@dimen/padding_icon</item>
    </style>
</resources>